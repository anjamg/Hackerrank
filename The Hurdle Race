#include <fstream>
#include <numeric>
#include <sstream>
#include <iostream>
#include <algorithm>
#include <unordered_map>

using namespace std;


int main(){
    int n;
    int k;
    int h=0;
    cin >> n >> k;
    vector<int> height(n);
    for(int height_i = 0; height_i < n; height_i++){
       cin >> height[height_i];
       if (h<height[height_i]){
           h=height[height_i];
       }
    }
    int m=0;
    /*h=max_element(height.begin(),height.end());*/
    if (h>k){
        m=h-k;
    }
    cout << m;
    return 0;
}
